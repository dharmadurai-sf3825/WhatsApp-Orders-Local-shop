rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Shops collection
    match /shops/{shopId} {
      allow read: if true; // Public read for customers
      allow write: if isOwner(resource.data.ownerId);
    }
    
    // Products collection
    match /products/{productId} {
      allow read: if true; // Public read for customers
      allow write: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/shops/$(resource.data.shopId)) &&
                     get(/databases/$(database)/documents/shops/$(resource.data.shopId)).data.ownerId == request.auth.uid;
    }
    
    // Orders collection
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.customerId) || 
                     isOwner(resource.data.sellerId);
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.sellerId); // Only seller can update order status
      allow delete: if false; // No deletion allowed
    }
    
    // Payments collection
    match /payments/{paymentId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated();
      allow update, delete: if false; // Payments are immutable
    }
  }
}
